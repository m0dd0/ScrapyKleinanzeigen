  "version": "0.2.0",
  "configurations": [
    {
      "name": "scrapy crawl",
      "type": "python",
      "request": "launch",
      "module": "scrapy",
      "args": [
        "crawl",
        "search_spider",
        "--loglevel=DEBUG",
        "-a",
        "categories=Reptilien",
        "-a",
        "max_age=900",
        "-a",
        "seperate_business_ads=False"
      ],
      "cwd": "${workspaceFolder}/webcrawler",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
